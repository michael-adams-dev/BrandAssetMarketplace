<%= render partial: "shared/navbar"%>
<div class="container mt-5">
  <div class="form-container">
    <h2 class="form-title mb-3">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :password, class:"form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password" , class: "form-input"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class:"form-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "form-submit mb-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
