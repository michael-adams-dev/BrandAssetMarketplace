<%= render partial: "shared/navbar"%>
<div class="container mt-5">
  <div class="form-container">
    <h1 class="form-title mb-3">Edit Seller Profile</h1>

    <%= form_with model: @seller_profile, local: true do |f| %>
      <div>  
        <%= f.label :brand_name, class:"form-label" %>
        <%= f.text_field :brand_name, class: "form-input" %>
      </div>
      <div>  
        <%= f.label :brand_logo, class:"form-label" %>
        <%= f.file_field :brand_logo, class: "form-input" %>
      </div>
      <div>  
        <%= f.label :brand_description, class:"form-label" %>
        <%= f.text_area :brand_description, class: "form-input form-box" %>
      </div>
      <div>  
        <%= f.label :brand_url, class:"form-label" %>
        <%= f.text_field :brand_url, class: "form-input" %>
      </div>
      <div>  
        <%= f.label :contact_number, class:"form-label" %>
        <%= f.text_field :contact_number, class: "form-input" %>
      </div>
      <div>  
        <%= f.label :contact_email, class:"form-label" %>
        <%= f.email_field :contact_email, class: "form-input" %>
      </div>
      <div>  
        <%= f.submit "Update seller profile", class: "form-submit mt-2" %>
      </div>
    <% end %>
  </div>
</div>